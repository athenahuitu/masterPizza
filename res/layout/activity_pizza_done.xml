<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/uidone"
    tools:context=".PizzaDoneActivity" >

    <Button
        android:id="@+id/prev"
        style="@style/ButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/pinkbutton"
        android:onClick="chooseMeat"
        android:text="Pre Step!" />

    <Button
        android:id="@+id/button1"
        style="@style/ButtonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/prev"
        android:layout_alignBottom="@+id/prev"
        android:layout_alignParentRight="true"
        android:layout_marginRight="17dp"
        android:background="@drawable/pinkbutton"
        android:onClick="save"
        android:text="Save!" />

</RelativeLayout>