<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <cmu.teamCooper.masterpizza.ScalableImageView
        android:id="@+id/pizza_view"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="64dp" 
        android:src="@drawable/wheat" />

     <cmu.teamCooper.masterpizza.ScalableImageView
         android1:id="@+id/sauce_view"
         android1:layout_width="230dp"
         android1:layout_height="230dp"
         android1:layout_alignLeft="@+id/pizza_view"
         android1:layout_alignTop="@+id/pizza_view"
         android1:layout_marginLeft="20dp"
         android1:layout_marginTop="16dp" />
     
      <cmu.teamCooper.masterpizza.ViewForCheese
         android1:id="@+id/view_for_cheese"
         android1:layout_width="210dp"
         android1:layout_height="210dp"
         android1:layout_alignLeft="@+id/pizza_view"
         android1:layout_alignTop="@+id/pizza_view"
         android1:layout_marginLeft="32dp"
         android1:layout_marginTop="31dp" />
      
       <cmu.teamCooper.masterpizza.MeatView
         android1:id="@+id/meat_view"
         android1:layout_width="210dp"
         android1:layout_height="210dp"
         android1:layout_alignLeft="@+id/pizza_view"
         android1:layout_alignTop="@+id/pizza_view"
         android1:layout_marginLeft="32dp"
         android1:layout_marginTop="31dp" />

</RelativeLayout>